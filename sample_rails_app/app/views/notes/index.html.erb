<h1>Listing notes</h1>

<table>
  <tr>
    <th>Note text</th>
  </tr>

<% for note in @notes %>
  <tr>
    <td><%=h note.note_text %></td>
    <td><%= link_to 'Show', person_note_path(@person, note) %></td>
    <td><%= link_to 'Edit', edit_person_note_path(@person, note) %></td>
    <td><%= link_to 'Destroy', person_note_path(@person, note), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New note', new_person_note_path(@person) %>
