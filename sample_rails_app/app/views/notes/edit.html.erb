<h1>Editing note</h1>

<% form_for(@note, :url => person_note_path(@person, @note)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :note_text %><br />
    <%= f.text_field :note_text %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', person_note_path(@person, @note) %> |
<%= link_to 'Back', person_notes_path(@person) %>
